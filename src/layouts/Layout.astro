---
import '../styles/global.css';
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>DiegoMZ - Portfolio</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content="Portafolio page created with Astro + Tailwind CSS" />
		<meta property="og:title" content="DiegoMZ - Portfolio" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.diegomz.com/" />
		<!-- <meta property="og:image" content="https://ia.media-imdb.com/images/rock.jpg" /> -->
		<meta property="og:locale" content="en_US" />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: black;
		background-image: url('/images/background.webp');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		display: flex;
		flex-direction: column;
	}
</style>
